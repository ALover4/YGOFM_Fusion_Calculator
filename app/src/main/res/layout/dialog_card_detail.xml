<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:layout_marginBottom="5dp">

            <!-- Card Image -->
            <ImageView
                android:id="@+id/card_image_detail"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/card_back"
                android:background="@drawable/card_image_border"
                android:layout_marginEnd="16dp" />

            <!-- Card Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_name_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/card_id_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID: 1"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/card_type_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type: Dragon"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/card_attack_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attack: 0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />

            </LinearLayout>

        </LinearLayout>

        <!-- Drop Information Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drop Information"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="#FFECB3"
            android:padding="4dp"
            android:layout_marginBottom="2dp" />

        <!-- Drop Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/drop_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Available from: 0 opponents"
                android:textSize="14sp"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                android:padding="2dp" />

        </LinearLayout>

        <!-- No Drops Message -->
        <TextView
            android:id="@+id/no_drops_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This card cannot be dropped from any opponent."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone" />

        <!-- Drops List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/drops_recycler"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical"
            android:layout_marginBottom="4dp" />

        <!-- Fusion Section Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fusion Information"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="#F5F5F5"
            android:padding="2dp"
            android:layout_marginBottom="3dp" />

        <!-- Fusion Search Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp">

            <EditText
                android:id="@+id/fusion_search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search fusions by card name..."
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textSize="12sp"
                android:background="@drawable/search_input_background" />

            <Button
                android:id="@+id/clear_fusion_search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Clear All"
                android:textSize="10sp"
                android:padding="4dp" />

        </LinearLayout>
        
        <!-- Filter Hint -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip: Click the colored fusion counts below to filter by type"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:visibility="gone"
            android:textStyle="italic" />

        <!-- Fusion Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/direct_fusions_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Direct: 0"
                android:textSize="12sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:background="@drawable/search_input_background"
                android:padding="8dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true" />

            <TextView
                android:id="@+id/material_fusions_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="As Material: 0"
                android:textSize="12sp"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:background="@drawable/search_input_background"
                android:padding="8dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true" />

            <TextView
                android:id="@+id/result_fusions_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="As Result: 0"
                android:textSize="12sp"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                android:background="@drawable/search_input_background"
                android:padding="8dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true" />

            <TextView
                android:id="@+id/showing_fusions_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Showing: 0"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:padding="8dp"
                android:layout_margin="2dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- No Fusions Message -->
        <TextView
            android:id="@+id/no_fusions_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This card has no fusion recipes."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone" />

        <!-- Fusions List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fusions_recycler"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical"
            android:layout_marginBottom="4dp" />

        <!-- Close Button -->
        <Button
            android:id="@+id/close_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@android:color/white"
            android:background="@color/design_default_color_primary"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView> 