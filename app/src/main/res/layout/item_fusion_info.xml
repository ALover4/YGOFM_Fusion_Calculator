<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    android:elevation="2dp">

    <!-- Fusion Type -->
    <TextView
        android:id="@+id/fusion_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direct Fusion"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="4dp" />

    <!-- Fusion Description -->
    <TextView
        android:id="@+id/fusion_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card A + Card B = Card C"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp" />

    <!-- Fusion Details -->
    <TextView
        android:id="@+id/fusion_details_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direct fusion involving 2 cards â€¢ Result ATK: 1000"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout> 