<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/fusion_item_background"
    android:padding="12dp"
    android:layout_margin="4dp"
    android:elevation="4dp">

    <!-- Fusion Formula -->
    <TextView
        android:id="@+id/fusion_formula_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card 1 + Card 2 = Result"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Materials Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Material 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@drawable/material_background"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material 1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/material1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card Name (ATK)"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Plus Sign -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="8dp" />

        <!-- Material 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@drawable/material_background"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material 2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/material2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card Name (ATK)"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Equals and Arrow -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¬‡"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Result -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/result_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fusion Result"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result Card Name (ATK)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Perform Fusion Button -->
    <Button
        android:id="@+id/perform_fusion_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perform Fusion"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/fusion_button_background"
        android:textColor="@android:color/white" />

</LinearLayout> 