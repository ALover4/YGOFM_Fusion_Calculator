<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="140dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_slot_background"
        android:padding="2dp">

        <!-- Card Image with Remove Button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="70dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/empty_card"
                android:background="@drawable/card_image_background" />

            <!-- Remove Button (X) -->
            <Button
                android:id="@+id/remove_card_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end"
                android:background="@drawable/remove_button_background"
                android:text="âœ•"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="2dp"
                android:visibility="gone"
                app:backgroundTint="#FF5722" />

        </FrameLayout>

        <!-- Card Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_info_background"
            android:padding="3dp"
            android:layout_marginTop="1dp">

            <!-- Card Name -->
            <TextView
                android:id="@+id/card_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empty Slot"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Card Stats -->
            <TextView
                android:id="@+id/card_stats_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="9sp"
                android:textColor="#7B8C9A"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="1dp" />

        </LinearLayout>

        <!-- Move Button -->
        <Button
            android:id="@+id/move_card_button"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Move"
            android:textSize="8sp"
            android:textColor="@android:color/white"
            android:background="@drawable/move_button_background"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            app:backgroundTint="#4CAF50" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 